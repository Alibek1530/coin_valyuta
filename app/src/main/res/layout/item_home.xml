<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:cardCornerRadius="4dp"
   android:layout_margin="4dp"
    android:layout_marginLeft="8dp"

    android:layout_marginRight="8dp"
    android:orientation="horizontal">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con"

        android:layout_width="match_parent"
        android:layout_height="50dp">
    <ImageView
        android:id="@+id/HomeImageFlag"
        android:layout_width="70dp"
        android:layout_gravity="fill_vertical"
        app:layout_constraintTop_toTopOf="@id/con"
        app:layout_constraintBottom_toBottomOf="@id/con"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/HomeTextFlag"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/HomeImageFlag"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/HomeTextSom"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/HomeTextFlag"
            app:layout_constraintTop_toTopOf="parent" />
<!--        <TextView-->
<!--            android:id="@+id/HomeTextSomPlus"-->
<!--            android:layout_width="35dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="11dp"-->
<!--            app:layout_constraintRight_toLeftOf="@id/HomeImagePlus"-->
<!--            android:layout_marginTop="2dp"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <TextView
            android:id="@+id/HomeTextSomMinus"
            android:layout_width="35dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="2dp"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/HomeImagePlus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>